<h1>Start a New Project</h1>

<%= render partial: 'layouts/errors', locals: {object: @project} %>


<%= form_for(@project) do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :pattern_name %><br>
  <%= f.text_field :pattern_name %><br>

  <%= f.label :designer %><br>
  <%= f.text_field :designer %><br>

  <%= f.label :craft %><br>
  <%= f.text_field :craft %><br>

  <%= f.label :tool_size %><br>
  <%= f.text_field :tool_size %><br>

  <p>Add an Existing Yarn:</p>
  <%= f.collection_select :yarn_ids, current_user.yarns, :id, :brand_and_colorway, {include_blank: true} %> <br>

  <%= f.submit 'Start Project' %>
<% end %>
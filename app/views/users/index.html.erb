<h1>Yarn Stasher</h1>

<div class="top-project">
  <h2>Most Popular Project</h2>
  <h3><%= link_to @project.title, project_path(@project) %></h3>
  <p><%= @project.user.username %></p>
</div>

<div class="top-commenter">
  <h2>Top Commenter</h2>
</div>

<div class="new-projects">
  <h2>Recently Created Projects</h2>
  <% @new_projects.each do |project| %>
    <div class="project-card">
      <h3><%= project.title %></h3>
      <p><%= project.user.username %></p>
    </div>
  <% end %>
</div>
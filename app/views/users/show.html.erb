<h1><%= @user.username %>'s Profile</h1>

<%= link_to 'Add New Yarn', new_yarn_path %> | <%= link_to 'Add New Project', new_project_path %>

<table>
    <thead>
        <tr>
            <th>Brand</a></th>
            <th>Colorway</a></th>
            <th>Fiber</a></th>
            <th>Weight</a></th>
            <th>Yardage</a></th>
            <th>Quantity</a></th>
        </tr>
    </thead>
    <% @yarns.each do |yarn|%>
        <tr>
            <td><%= link_to yarn.brand_name, yarn_path(yarn) %></td>
            <td><%= yarn.colorway %></td>
            <td><%= yarn.fiber %></td>
            <td><%= yarn.weight %></td>
            <td><%= yarn.yardage %></td>
            <td><%= yarn.quantity %></td>
            
        </tr>
    <% end %>
</table>